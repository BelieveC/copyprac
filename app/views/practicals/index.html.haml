=form_tag(practicals_path,method: :get) do
	=text_field_tag :search,params[:search],class:"form-control",placeholder:"Search Practicals"
	%br/
	=submit_tag("Search",class:"btn btn-primary")
	%br/
	%br/
-if @query.present?
	= @practicals.count
	results found for
	%strong=@query
	%br/
- @practicals.each do |practical|
	%h1=link_to practical.aim,practical
	%h3=practical.subject
	%p=practical.description
	%p Submitted
	%strong=time_ago_in_words(practical.created_at)
	ago
	%br/
	%br/
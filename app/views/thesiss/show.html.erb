<div id="post-content">
    <div id="feed">
        <h2 id="head"><%= @thesis.topic %></h2>
        <div class="row">
            <% @thesis.thesisimages.each do |thesisimage|  %>
              <div class="col-xs-6 col-md-3">
                <%= image_tag(thesisimage.paper.url,class:"materialboxed thumbnail",width:"250")%>
              </div>
            <%end%>
        </div>
    <ul class="collapsible popout" data-collapsible="accordion">
        <li>
          <div class="collapsible-header"><i class="material-icons">whatshot</i>Publisher</div>
          <div class="collapsible-body"><p><%=simple_format(@thesis.publisher)%></p></div>
        </li> 
        <li>
          <div class="collapsible-header"><i class="material-icons">whatshot</i>Duration</div>
          <div class="collapsible-body"><p><%=simple_format(@thesis.duration)%></p></div>
        </li> 
        <li>
          <div class="collapsible-header"><i class="material-icons">whatshot</i>Researchers</div>
          <div class="collapsible-body"><p><%=simple_format(@thesis.reasearchers)%></p></div>
        </li>
        <li>
          <div class="collapsible-header"><i class="material-icons">whatshot</i>Description</div>
          <div class="collapsible-body"><p><%=simple_format(@thesis.description)%></p></div>
        </li>
     </ul>
    <%= link_to "Edit",edit_thesiss_path(@thesis),class:"btn btn-primary"%>
    <%= link_to "Delete",@thesiss,method: :delete,data:{confirm:"Are you sure?"},class:"btn btn-danger"%>
    <%= link_to "Back",:back,class:"btn btn-info"%>
    <br>
</div>
<br>
